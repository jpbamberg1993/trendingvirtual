- if @articles.length > 3
  #bs-carousel.carousel.fade-carousel.slide{"data-interval" => "8000",
    "data-ride" => "carousel"}

    / Overlay
    .overlay

    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#bs-carousel"}
      %li{"data-slide-to" => "1", "data-target" => "#bs-carousel"}
      %li{"data-slide-to" => "2", "data-target" => "#bs-carousel"}
      %li{"data-slide-to" => "3", "data-target" => "#bs-carousel"}

    / Wrapper for slides
    .carousel-inner.list-unstyled
      .item.slides.active
        .slide-1
        .hero
          %hgroup
            = link_to @articles[0].category.name.upcase,
              category_show_path(@articles[0].category.id)
            %h1= @articles[0].title
            %p= @articles[0].subject
            %h5
              %strong
                = @articles[0].author
              on
              = @articles[0].created_at.strftime('%B %d, %Y')
      .item.slides
        .slide-2
        .hero
          %hgroup
            = link_to @articles[1].category.name.upcase,
              category_show_path(@articles[1].category.id)
            %h1= @articles[1].title
            %p= @articles[1].subject
            %h5
              %strong
                = @articles[1].author
              on
              = @articles[1].created_at.strftime('%B %d, %Y')
      .item.slides
        .slide-3
        .hero
          %hgroup
            = link_to @articles[2].category.name.upcase,
              category_show_path(@articles[2].category.id)
            %h1= @articles[2].title
            %p= @articles[2].subject
            %h5
              %strong
                = @articles[2].author
              on
              = @articles[2].created_at.strftime('%B %d, %Y')
      .item.slides
        .slide-4
        .hero
          %hgroup
            %a{ href: "#" }
              = @articles[3].category.name.upcase
            %h1= @articles[3].title
            %p= @articles[3].subject
            %h5
              %strong
                = @articles[3].author
              on
              = @articles[3].created_at.strftime('%B %d, %Y')

  / Page Content
  .container
    .row
      / Blog Entries Column
      .col-md-8.no-padding
        = render 'articles/article'
